{
  "name": "@incmix/ui-base",
  "version": "3.2.3",
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "style": "./styles.css",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./components/*": {
      "require": {
        "types": "./dist/cjs/components/*.d.ts",
        "default": "./dist/cjs/components/*.js"
      },
      "import": {
        "types": "./dist/esm/components/*.d.ts",
        "default": "./dist/esm/components/*.js"
      }
    },
    "./helpers": {
      "require": {
        "types": "./dist/cjs/helpers/index.d.ts",
        "default": "./dist/cjs/helpers/index.js"
      },
      "import": {
        "types": "./dist/esm/helpers/index.d.ts",
        "default": "./dist/esm/helpers/index.js"
      }
    },
    "./props": {
      "require": {
        "types": "./dist/cjs/props/index.d.ts",
        "default": "./dist/cjs/props/index.js"
      },
      "import": {
        "types": "./dist/esm/props/index.d.ts",
        "default": "./dist/esm/props/index.js"
      }
    },
    "./*": "./*"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "*.css"
  ],
  "license": "MIT",
  "files": [
    "src/**",
    "dist/**",
    "tokens/**",
    "layout/**",
    "*.css",
    "postcss-breakpoints.cjs",
    "postcss-whitespace.cjs"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json --outDir dist",
    "typecheck": "tsc",
    "dev": "pnpm run build && pnpm watch & pnpm storybook",
    "watch": "tsc -p tsconfig.json --outDir dist --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@incmix/radix-ui": "workspace: *",
    "@incmix/shadcn": "workspace: *",
    "classnames": "^2.3.2"
  },
  "peerDependencies": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-onboarding": "catalog:",
    "@storybook/react-vite": "catalog:",
    "autoprefixer": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-jsx-a11y": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-storybook": "catalog:",
    "globals": "catalog:",
    "postcss": "catalog:",
    "postcss-cli": "catalog:",
    "postcss-combine-duplicated-selectors": "catalog:",
    "postcss-custom-media": "catalog:",
    "postcss-discard-empty": "catalog:",
    "postcss-import": "catalog:",
    "postcss-nesting": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "catalog:",
    "stylelint": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "homepage": "https://radix-ui.com/themes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/incmix/ui-base.git"
  },
  "bugs": {
    "url": "https://github.com/incmix/ui-base/issues"
  }
}
